{
  "Image" : "controller:latest",
  "Name" : "/controller",
  "Hostname" : "controller",
  "Env": [
    "SPLUNK_URL={{SPLUNK_URL}}",
    "SPLUNK_TOKEN={{SPLUNK_TOKEN}}"
  ],
  "HostConfig" : {
    "Devices": [
      {
        "PathOnHost": "/dev/ttyUSB0",
        "PathInContainer": "/dev/ttyUSB0",
        "CgroupPermissions": "rwm"
      }
    ],
    "RestartPolicy": { "Name": "always" }
  }
}
{
  "Image" : "controller:latest",
  "Name" : "/controller",
  "Hostname" : "controller",
  "HostConfig" : {
    "Devices": [
      {
        "PathOnHost": "/dev/ttyUSB0",
        "PathInContainer": "/dev/ttyUSB0",
        "CgroupPermissions": "rwm"
      }
    ],
    "RestartPolicy": { "Name": "always", "MaximumRetryCount": 30 }
  }
}